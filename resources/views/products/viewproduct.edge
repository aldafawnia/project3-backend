@layout('base')
@section('content')
<h1> User View Product </h1>

<table class="table">
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Price</th>
          <th>Description</th>
          <th>Category</th>
          <th>Image</th>
          <th>Stock</th>
        </tr>
        @each(p in products)
          <tr>
            <td>{{p.id}}</td>
            <td>{{p.product_name}}</td>
            <td>{{p.price/100}}</td>
            <td>{{p.description}}</td>
            <td>
            @each(c in p.categories)
            {{c.category_name}}
            @endeach
            </td>
            <td><img src='{{p.image}}'alt="image" height="140px"/></td>
            <td>{{p.stock}}</td>
          </tr>
        @endeach
</table>

@endsection
